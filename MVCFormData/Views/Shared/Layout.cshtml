            var name;
            @if (Session["login_type"]!=null){
            @:login_type = "@Session["login_type"]";
                                @:name = "@Session["user_name"]";
                     }
        else if(Request.Cookies["user_info"] != null)
        {
            @:login_type = "@Request.Cookies["user_info"]["login_type"]";
                                @:name = "@Request.Cookies["user_info"]["user_name"]";
                            }
            if (login_type != 0) {
                $("#signup_link").html("<span class='glyphicon glyphicon-user'></span>" + name);
                $("#signup_link").attr("href", "/profile");
                $("#login_link").html("<span class='glyphicon glyphicon-log-in'></span> Log out");
                $("#login_link").attr("href", "/login/logout");
            }
        });
    </script>

